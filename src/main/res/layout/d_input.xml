<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:fillViewport="true"
            xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        style="@style/dialog.container"
        android:fillViewport="true"
        android:background="@color/windowBackground"
        android:layout_gravity="bottom"
        android:gravity="start"
        android:paddingLeft="@dimen/l_p_h"
        android:paddingTop="@dimen/l_p_v"
        android:paddingRight="@dimen/l_p_h"
        android:paddingBottom="@dimen/l_p_v">

        <LinearLayout android:id="@+id/_l_title" style="@style/Fra" android:layout_width="wrap_content">
            <TextView
                android:id="@+id/_tv_title"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textStyle="italic"
                tools:text="标题"/>
            <View style="@style/line" android:background="@color/colorAccent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/_til_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/_et_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <!--<EditText-->
                    <!--android:id="@+id/_et_edit"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"/>-->
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/_bt_editConfirm"
                style="@style/Btn.FixHeight"
                android:layout_width="wrap_content"
                android:text="@android:string/ok"/>
        </LinearLayout>


    </LinearLayout>

</ScrollView>
