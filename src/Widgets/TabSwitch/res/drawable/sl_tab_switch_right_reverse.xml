<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <corners android:topRightRadius="@dimen/TabSwitch_corner" android:bottomRightRadius="@dimen/TabSwitch_corner"/>
            <solid android:color="?android:attr/colorControlNormal"/>
            <stroke android:width="@dimen/TabSwitch_border" android:color="?android:attr/colorControlNormal"/>
        </shape>
    </item>
    <item >
        <shape>
            <corners android:topRightRadius="@dimen/TabSwitch_corner" android:bottomRightRadius="@dimen/TabSwitch_corner"/>
            <solid android:color="?android:attr/colorControlActivated"/>
            <stroke android:width="@dimen/TabSwitch_border" android:color="?android:attr/colorControlNormal"/>
        </shape>
    </item>

</selector>