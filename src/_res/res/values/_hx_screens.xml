<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Fra">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <!--<item name="android:background">@color/_bg</item>-->
    </style>
    <style name="Fra.Full">
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="Fra.Full.H">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="Fra.Full.M">
        <item name="android:layout_marginLeft">@dimen/l_m_h</item>
        <item name="android:layout_marginRight">@dimen/l_m_h</item>
        <item name="android:layout_marginBottom">@dimen/l_m_v</item>
        <item name="android:layout_marginTop">@dimen/l_m_v</item>
    </style>
    <style name="Fra.Full.P">
        <item name="android:paddingLeft">@dimen/l_p_h</item>
        <item name="android:paddingRight">@dimen/l_p_h</item>
        <item name="android:paddingTop">@dimen/l_p_v</item>
        <item name="android:paddingBottom">@dimen/l_p_v</item>
    </style>
    <style name="Fra.H">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="Fra.PH">
        <item name="android:paddingLeft">@dimen/l_p_h</item>
        <item name="android:paddingRight">@dimen/l_p_h</item>
    </style>
    <style name="Fra.HPH" parent="Fra.H">
        <item name="android:paddingLeft">@dimen/l_p_h</item>
        <item name="android:paddingRight">@dimen/l_p_h</item>
    </style>
    <style name="Fra.HPV" parent="Fra.H">
        <item name="android:paddingBottom">@dimen/l_p_v</item>
        <item name="android:paddingTop">@dimen/l_p_v</item>
    </style>
    <style name="Fra.HP">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/l_p_h</item>
        <item name="android:paddingRight">@dimen/l_p_h</item>
        <item name="android:paddingBottom">@dimen/l_p_v</item>
        <item name="android:paddingTop">@dimen/l_p_v</item>
    </style>
    <style name="Fra.PV">
        <item name="android:paddingBottom">@dimen/l_p_v</item>
        <item name="android:paddingTop">@dimen/l_p_v</item>
    </style>
    <style name="Fra.P">
        <item name="android:paddingLeft">@dimen/l_p_h</item>
        <item name="android:paddingRight">@dimen/l_p_h</item>
        <item name="android:paddingBottom">@dimen/l_p_v</item>
        <item name="android:paddingTop">@dimen/l_p_v</item>
    </style>
    <style name="Fra.MH">
        <item name="android:layout_marginLeft">@dimen/l_m_h</item>
        <item name="android:layout_marginRight">@dimen/l_m_h</item>
    </style>
    <style name="Fra.MV">
        <item name="android:layout_marginBottom">@dimen/l_m_v</item>
        <item name="android:layout_marginTop">@dimen/l_m_v</item>
    </style>
    <style name="Fra.M">
        <item name="android:layout_marginLeft">@dimen/l_m_h</item>
        <item name="android:layout_marginRight">@dimen/l_m_h</item>
        <item name="android:layout_marginBottom">@dimen/l_m_v</item>
        <item name="android:layout_marginTop">@dimen/l_m_v</item>
    </style>
    <style name="Fra.MP">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/l_m_h</item>
        <item name="android:layout_marginRight">@dimen/l_m_h</item>
        <item name="android:layout_marginBottom">@dimen/l_m_v</item>
        <item name="android:layout_marginTop">@dimen/l_m_v</item>
        <item name="android:paddingLeft">@dimen/l_p_h</item>
        <item name="android:paddingRight">@dimen/l_p_h</item>
        <item name="android:paddingBottom">@dimen/l_p_v</item>
        <item name="android:paddingTop">@dimen/l_p_v</item>
    </style>

    <style name="PageContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start|center_horizontal</item>
        <item name="android:background">@color/windowBackground</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="PageContainer.Match" parent="PageContainer">
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="PageContainer.Padding.Vertical" parent="PageContainer.Match">
        <item name="android:paddingBottom">@dimen/l_p_v</item>
        <item name="android:paddingTop">@dimen/l_p_v</item>
    </style>
    <style name="PageContainer.Padding.Horizontal" parent="PageContainer">
        <item name="android:paddingLeft">@dimen/l_p_h</item>
        <item name="android:paddingRight">@dimen/l_p_h</item>
    </style>
    <style name="PageContainer.Padding" parent="PageContainer.Match">
        <item name="android:paddingLeft">@dimen/l_p_h</item>
        <item name="android:paddingRight">@dimen/l_p_h</item>
        <item name="android:paddingBottom">@dimen/l_p_v</item>
        <item name="android:paddingTop">@dimen/l_p_v</item>
    </style>

</resources>