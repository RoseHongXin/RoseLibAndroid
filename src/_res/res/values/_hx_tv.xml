<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tv.title" parent="tv">
        <item name="android:gravity">center_vertical|left|start</item>
        <item name="android:textSize">@dimen/txt_title</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="tv.emphasize" parent="tv.title">
        <item name="android:textColor">@color/txt_emphasize</item>
    </style>

</resources>