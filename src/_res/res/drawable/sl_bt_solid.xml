<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/bt_corner"/>
            <stroke android:color="@color/colorAccent" android:width="@dimen/bt_border"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/bt_corner"/>
            <stroke android:color="@color/_disabled" android:width="@dimen/bt_border"/>
            <solid android:color="@color/_disabled"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/bt_corner"/>
            <solid android:color="@color/colorAccent"/>
        </shape>
    </item>

</selector>