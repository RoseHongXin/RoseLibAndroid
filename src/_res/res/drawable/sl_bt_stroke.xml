<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/bt_corner"/>
            <stroke android:width="4dp" android:color="?android:attr/colorButtonNormal"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/bt_corner"/>
            <stroke android:width="@dimen/bt_border" android:color="@color/_disabled"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/bt_corner"/>
            <stroke android:width="@dimen/bt_border" android:color="?android:attr/colorButtonNormal"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
</selector>